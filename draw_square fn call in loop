import turtle
t = turtle.Turtle()
color = ['red','blue','green','yellow','pink','brown']
t.speed(0)
def draw_square(colornum=1,size=20,width=5):
  for sides in range(4):
    t.color(color[colornum-1])
    t.width(width)
    t.forward(size)
    t.right(90)
for squares in range(3):
	draw_square(4,25,width=6)
	t.penup()
	t.forward(50)
	t.pendown()
